<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".NewPostActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/poppins_extrabold_italic"
                android:text="@string/main_btnNewPost"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textSize="28sp" />

            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:backgroundTint="@color/secondary"
                android:fitsSystemWindows="false"
                app:tabIndicatorColor="#9287CE"
                app:tabIndicatorFullWidth="true"
                app:tabIndicatorGravity="bottom"
                app:tabIndicatorHeight="5dp"
                app:tabSelectedTextColor="#FFFFFF"
                app:tabTextColor="#7564D1">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lost" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Found" />

            </com.google.android.material.tabs.TabLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_extrabold"
                android:text="Item details"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="@font/inter_medium"
                android:hint="Name of item"
                android:inputType="text"
                android:maxLength="32"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:textColor="#9287CE"
                android:textColorHint="#48416B"
                android:textSize="18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="@font/inter_medium"
                android:gravity="top"
                android:hint="Description"
                android:inputType="text"
                android:lines="5"
                android:maxLines="5"
                android:paddingBottom="15dp"
                android:singleLine="false"
                android:textColor="#9287CE"
                android:textColorHint="#48416B"
                android:textSize="18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="@font/inter_medium"
                android:hint="Location"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:textColor="#9287CE"
                android:textColorHint="#48416B"
                android:textSize="18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Date"
                android:inputType="datetime|date"
                android:paddingBottom="15dp"
                android:textColor="#9287CE"
                android:textColorHint="#48416B" />

            <TextView
                android:id="@+id/tvContactInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_extrabold"
                android:text="Contact information"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etPosterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="@font/inter_medium"
                android:hint="Name"
                android:inputType="text"
                android:maxLength="32"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:textColor="#9287CE"
                android:textColorHint="#48416B"
                android:textSize="18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="@font/inter_medium"
                android:hint="Mobile"
                android:inputType="text"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:textColor="#9287CE"
                android:textColorHint="#48416B"
                android:textSize="18sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnSavePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:backgroundTint="@color/secondary"
                android:text="Save"
                app:cornerRadius="6dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>